{
  "name": "@boardgamelab/components",
  "version": "0.0.10",
  "description": "Definitions of Components used in Boardgame Lab",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --no-cache --coverage --collectCoverageFrom=src/**",
    "build": "microbundle index.ts",
    "ts": "tsc --noEmit",
    "prepack": "npm run build",
    "prettier": "prettier --write src/*.ts"
  },
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "author": "Nicolo John Davis <nicolodavis@gmail.com>",
  "license": "Apache 2.0",
  "devDependencies": {
    "@babel/plugin-proposal-optional-chaining": "^7.9.0",
    "@types/jest": "^25.1.3",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7",
    "microbundle": "^0.12.0-next.8",
    "prettier": "^2.0.4",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,css,json,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "coveragePathIgnorePatterns": []
  }
}
